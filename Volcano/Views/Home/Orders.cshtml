@using Volcano.Models

@{
    DB_Context db = new DB_Context();
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int id = int.Parse(Session["memberid"].ToString());
    List<Volcano.Models.Shipping_Detail> orders = db.Shipping_Detail.Where(n => n.Member_ID == id).ToList();

}

<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>ORDERS</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="">Home</a></li>
                    <li class="breadcrumb-item active">Your Orders</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="cart-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-main table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Shipping ID</th>
                                <th>Address</th>
                                <th>Area</th>
                                <th>City</th>
                                <th>Country</th>
                                <th>Amount Paid</th>
                                <th>Payment Method</th>
                                <th>Date</th>
                                <th>Time</th>
                            </tr>
                        </thead>
                        <tbody>
                          
                            @for (int i = 0; i < orders.Count; i++)
                            {
                                <tr>
                                    <td>@orders[i].Shipping_ID</td>
                                    <td>@orders[i].Address</td>
                                    <td>@orders[i].Area</td>
                                    <td>@orders[i].City</td>
                                    <td>@orders[i].Country</td>
                                    <td>@orders[i].AmountPaid.ToString("0.00")</td>
                                    <td>@orders[i].Payment_Type</td>
                                    <td>@orders[i].Date</td>
                                    <td>@orders[i].Time</td>
                                </tr>
                            }
                            </tbody>
                     </table>
                </div>
            </div>
        </div>
    </div>
</div>

@using Volcano.Models;

@{
    DB_Context dB = new DB_Context();
    ViewBag.Title = "Checkout Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int id = int.Parse(Session["memberid"].ToString());
    Member member = dB.Members.Where(n => n.Member_ID == id).FirstOrDefault();
    DateTime dateTime = DateTime.Now;
    string date = dateTime.ToString("dd-MM-yyyy");
    string time = dateTime.ToString("HH:mm");
}

<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>CHECKOUT DETAILS</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="">Home</a></li>
                    <li class="breadcrumb-item active">Checkout Details</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<!-- Start Cart  -->
<div class="cart-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-main table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ double Total = 0;}
                            @foreach (Items items in (List<Items>)Session["cart"])
                            {
                                double total = items.Quantity * items.Product.Price;
                                Total = Total + total;
                                <tr>
                                    <td>@items.Product.Prod_Name</td>
                                    <td>@items.Product.Price "L.E"</td>
                                    <td>@items.Quantity</td>
                                    <td class="total-pr">
                                        <p>@total "L.E"</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="order-box">
                    <div class="title-left">
                        <h3>Order Summary</h3>
                    </div>
                    <div class="d-flex">
                        <h4>Sub Total</h4>
                        <div class="ml-auto font-weight-bold"> @Total "L.E" </div>
                    </div>
                    <div class="d-flex">
                        <h4>Discount</h4>
                        <div class="ml-auto font-weight-bold"> 0 "L.E" </div>
                    </div>
                    <hr class="my-1">
                    <div class="d-flex">
                        <h4>Tax</h4>
                        @{double Tax = Total * 0.14;}
                        <div class="ml-auto font-weight-bold"> @Tax "L.E" </div>
                    </div>
                    <div class="d-flex">
                        <h4>Shipping Cost</h4>
                        <div class="ml-auto font-weight-bold"> Free </div>
                    </div>
                    <hr>
                    <div class="d-flex gr-total">
                        <h5>Grand Total</h5>
                        @{ double Grand = Tax + Total;}
                        <div class="ml-auto h5"> @Grand "L.E" </div>
                    </div>
                    <hr>
                </div>
            </div>
        </div>

        <div class="row my-5">
            <div class="col-lg-6 col-sm-6">

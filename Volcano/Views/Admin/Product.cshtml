
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<Volcano.Models.Product_Detail> products = ViewBag.Prods;

}

<div class="container-fluid px-4">

    <h1 class="mt-4">Product</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="~/Admin/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Product</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Product Details Table
            @Html.ActionLink("Add New", "AddProduct", "Admin", new { @style = "float:right;background-color:#ED9B83;border-color:#ED9B83;color:white", @class = "btn btn-info" })
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Category Name</th>
                        <th>Product Description</th>
                        <th>Product Quantity</th>
                        <th>Product Price</th>
                        <th>Action</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Category Name</th>
                        <th>Product Description</th>
                        <th>Product Quantity</th>
                        <th>Product Price</th>
                        <th>Action</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @for (int i = 0; i < products.Count; i++)
                    {
                    <tr>
                        <td>@products[i].Prod_ID</td>
                        <td>@products[i].Prod_Name</td>
                        <td>@products[i].Category_Detail.Cat_Name</td>
                        <td>@products[i].Description</td>
                        <td>@products[i].Quantity</td>
                        <td>@products[i].Price</td>
                        <td>
                            @Html.ActionLink("Edit", "UpdateProduct", new { id = products[i].Prod_ID }, new { @style = "float:right;background-color:#ED9B83;border-color:#ED9B83;color:white", @class = "btn btn-info" })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "DeleteProduct", new { id = products[i].Prod_ID }, new { @style = "float:left;background-color:#ED9B83;border-color:#ED9B83;color:white", @class = "btn btn-info" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@{
    ViewBag.Title = "Accounts Settings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<Volcano.Models.Member> members = ViewBag.Acc;

}

<div class="container-fluid px-4">

    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="~/Admin/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Accounts Settings</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Members Details Table
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Member ID</th>
                        <th>Memeber First Name</th>
                        <th>Memeber Last Name</th>
                        <th>Memeber Email</th>
                        <th>Memeber Role</th>
                        <th>Memeber Phone</th>
                        <th>Action</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Member ID</th>
                        <th>Memeber First Name</th>
                        <th>Memeber Last Name</th>
                        <th>Memeber Email</th>
                        <th>Memeber Role</th>
                        <th>Memeber Phone</th>
                        <th>Action</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @for (int i = 0; i < members.Count; i++)
                    {
                    <tr>
                        <td>@members[i].Member_ID</td>
                        <td>@members[i].First_Name</td>
                        <td>@members[i].Last_Name</td>
                        <td>@members[i].Email</td>
                        <td>@members[i].Role</td>
                        <td>@members[i].Phone</td>
                        <td>
                            @Html.ActionLink("Edit", "UpdateMember", new { id = members[i].Member_ID }, new { @style = "float:right;background-color:#ED9B83;border-color:#ED9B83;color:white", @class = "btn btn-info" })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "DeleteMember", new { id = members[i].Member_ID }, new { @style = "float:left;background-color:#ED9B83;border-color:#ED9B83;color:white", @class = "btn btn-info" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>


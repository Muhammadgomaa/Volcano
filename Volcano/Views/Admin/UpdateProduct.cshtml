@model Volcano.Models.Product_Detail

@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mt-4">Product</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="~/Admin/Dashboard">Dashboard</a></li>
    <li class="breadcrumb-item active">Update Product</li>
</ol>

<div class="container-fluid px-1 py-5 mx-auto">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <h3>Update Product</h3>
            <div class="card">
                <h5 class="text-center mb-4">Volcano</h5>
                <form class="form-card" action="~/Admin/UpdateProduct" method="post" enctype="multipart/form-data">
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-sm-6 flex-column d-flex">
                            @Html.HiddenFor(n => n.Prod_ID)
                            @Html.HiddenFor(n => n.Cat_ID)
                            @Html.HiddenFor(n => n.IsActive)
                            @Html.HiddenFor(n => n.IsDelete)
                            @Html.HiddenFor(n => n.IsFeatured)
                            @Html.HiddenFor(n=>n.Cat_ID)
                            @Html.HiddenFor(n=>n.Prod_Image)
                            <label class="form-control-label px-3">Product Name<span class="text-danger"> *</span></label>
                            @Html.TextBoxFor(n => n.Prod_Name, new { @placeholder = "Product Name", @onblur = "validateProd(1)" })
                            @Html.ValidationMessageFor(n => n.Prod_Name, "", new { @class = "text-danger" })

                            <label class="form-control-label px-3">Product Description<span class="text-danger"> *</span></label>
                            @Html.TextAreaFor(n => n.Description, new { @placeholder = "Product Description", @onblur = "validateProd(2)" })
                            @Html.ValidationMessageFor(n => n.Description, "", new { @class = "text-danger" })

                            <label class="form-control-label px-3">Product Quantity<span class="text-danger"> *</span></label>
                            @Html.TextBoxFor(n => n.Quantity, new { @placeholder = "Product Quantity", @onblur = "validateProd(5)" })
                            @Html.ValidationMessageFor(n => n.Quantity, "", new { @class = "text-danger" })

                            <label class="form-control-label px-3">Product Price<span class="text-danger"> *</span></label>
                            @Html.TextBoxFor(n => n.Price, new { @placeholder = "Product Price", @onblur = "validateProd(6)" })
                            @Html.ValidationMessageFor(n => n.Price, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <button type="submit" class="btn-block btn-primary">Update Product</button>


                </form>
            </div>
        </div>
    </div>
</div>



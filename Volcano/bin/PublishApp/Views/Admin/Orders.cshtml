
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<Volcano.Models.Shipping_Detail> orders = ViewBag.Orders;

}

<div class="container-fluid px-4">

    <h1 class="mt-4">Orders</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="~/Admin/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Orders</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Shipping Details Table
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Shipping ID</th>
                        <th>User Name</th>
                        <th>User Address</th>
                        <th>User Area</th>
                        <th>User City</th>
                        <th>User Country</th>
                        <th>User Phone</th>
                        <th>Amount Paid</th>
                        <th>Payment Method</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Refund</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Shipping ID</th>
                        <th>User Name</th>
                        <th>User Address</th>
                        <th>User Area</th>
                        <th>User City</th>
                        <th>User Country</th>
                        <th>User Phone</th>
                        <th>Amount Paid</th>
                        <th>Payment Method</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Refund</th>
                    </tr>
                </tfoot>
                <tbody>
                    @if (orders.Count != 0)
                    {
                        for (int i = 0; i < orders.Count; i++)
                        {
                    <tr>
                        <td>@orders[i].Shipping_ID</td>
                        <td>@orders[i].Member.First_Name  @orders[i].Member.Last_Name</td>
                        <td>@orders[i].Address</td>
                        <td>@orders[i].Area</td>
                        <td>@orders[i].City</td>
                        <td>@orders[i].Country</td>
                        <td>@orders[i].Member.Phone</td>
                        <td>@orders[i].AmountPaid.ToString("0.00")</td>
                        <td>@orders[i].Payment_Type</td>
                        <td>@orders[i].Date</td>
                        <td>@orders[i].Time</td>
                        <td>
                            @Html.ActionLink("Refund", "Refund", new { id = orders[i].Shipping_ID}, new { @style = "float:right;background-color:#ED9B83;border-color:#ED9B83;color:white", @class = "btn btn-info" })
                        </td>
                    </tr>
                        }
                    }
            else
            {
                <tr>No Data Available Now!</tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>


@model Volcano.Models.Member

@{
    ViewBag.Title = "Update Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>PROFILE</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="">Home</a></li>
                    <li class="breadcrumb-item active">Update Information</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row my-5">
    <div class="col-lg-11 col-sm-11">

        <form class="needs-validation" validate id="form1" action="~/Home/UpdateInformation" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">

                    <input type="hidden" class="form-control" name="Member_ID" value="@Model.Member_ID" readonly>
                    <input type="hidden" class="form-control" name="Password" value="@Model.Password" readonly>
                    <input type="hidden" class="form-control" name="Role" value="@Model.Role" readonly>
                    <input type="hidden" class="form-control" name="ConfirmPassword" value="@Model.Password" readonly>

                    <label for="firstName">First Name </label>
                    @Html.TextBoxFor(n => n.First_Name, new { @placeholder = "First Name", @class = "form-control" })
                    @Html.ValidationMessageFor(n => n.First_Name, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6 mb-3">
                    <label for="lastName">Last name </label>
                    @Html.TextBoxFor(n => n.Last_Name, new { @placeholder = "Last Name", @class = "form-control" })
                    @Html.ValidationMessageFor(n => n.Last_Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="mb-3">
                <label for="email">Email Address </label>
                @Html.TextBoxFor(n => n.Email, new { @placeholder = "Email", @class = "form-control" })
                @Html.ValidationMessageFor(n => n.Email, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <label for="email">Phone Number </label>
                @Html.TextBoxFor(n => n.Phone, new { @placeholder = "Phone Number" , @class = "form-control" })
                @Html.ValidationMessageFor(n => n.Phone, "", new { @class = "text-danger" })
            </div>
            <hr class="mb-1">
            <div class="col-12 d-flex shopping-box">
                <input type="submit" class="ml-auto btn hvr-hover" value="Update Information" />
            </div>
        </form>
      </div>
</div>
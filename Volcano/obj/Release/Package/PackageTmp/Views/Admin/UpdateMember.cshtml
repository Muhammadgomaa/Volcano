@model Volcano.Models.Member

@{
    ViewBag.Title = "Update Member Information";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">

    <h1 class="mt-4">User</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="~/Admin/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Update User Role</li>
    </ol>

    <div class="container-fluid px-1 py-5 mx-auto">
        <div class="row d-flex justify-content-center">
            <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
                <h3>Update User Role</h3>
                <div class="card">
                    <h5 class="text-center mb-4">Volcano</h5>
                    <form class="form-card" action="~/Admin/UpdateMember" id="form1" method="post">
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex">
                                @Html.HiddenFor(n => n.Member_ID)
                                @Html.HiddenFor(n => n.Password)
                                @Html.HiddenFor(n => n.ConfirmPassword , new { Value = Model.Password })

                                <label class="form-control-label px-3">Member First Name<span class="text-danger"> </span></label>
                                @Html.TextBoxFor(n => n.First_Name, new { @placeholder = "First Name", @readonly = "true" })

                                <label class="form-control-label px-3">Member Last Name<span class="text-danger"> </span></label>
                                @Html.TextBoxFor(n => n.Last_Name, new { @placeholder = "Last Name", @readonly = "true" })

                                <label class="form-control-label px-3">Member Email<span class="text-danger"> </span></label>
                                @Html.TextBoxFor(n => n.Email, new { @placeholder = "Email", @readonly = "true" })

                                <label class="form-control-label px-3">Member Phone<span class="text-danger"> </span></label>
                                @Html.TextBoxFor(n => n.Phone, new { @placeholder = "Phone Number", @readonly = "true" })

                                <label class="form-control-label px-3">Member Role<span class="text-danger"> </span></label>
                                <select name="Role">
                                    <option value="User">User</option>
                                    <option value="Admin">Admin</option>
                                </select>
                            </div>
                        </div>

                        <button type="submit" class="btn-block btn-primary">Update Role</button>


                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
@model Volcano.Models.Product_Detail

@{
    ViewBag.Title = "Add Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">

    <h1 class="mt-4">Product</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="~/Admin/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Add New Product</li>
    </ol>

    <div class="container-fluid px-1 py-5 mx-auto">
        <div class="row d-flex justify-content-center">
            <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
                <h3>Add New Product</h3>
                <div class="card">
                    <h5 class="text-center mb-4">Volcano</h5>
                    <form class="form-card" action="~/Admin/AddProduct" method="post" id="form1" enctype="multipart/form-data">
                        <div class="row justify-content-between text-left">
                            <div class="form-group col-sm-6 flex-column d-flex">

                                <label class="form-control-label px-3">Product Name<span class="text-danger"> *</span></label>
                                @Html.TextBoxFor(n => n.Prod_Name, new { @placeholder = "Product Name", @onblur = "validateProd(1)" })
                                @Html.ValidationMessageFor(n => n.Prod_Name, "", new { @class = "text-danger" })

                                <label class="form-control-label px-3">Product Category<span class="text-danger"> *</span></label>
                                @Html.DropDownListFor(n => n.Cat_ID, (SelectList)ViewBag.Catg, new { @placeholder = "Product Category", @onblur = "validateProd(3)" })
                                @Html.ValidationMessageFor(n => n.Cat_ID, "", new { @class = "text-danger" })

                                <label class="form-control-label px-3">Product Image<span class="text-danger"> *</span></label>
                                <input type="file" name="photo" id="Prod_Image" onblur="validateProd(4)" accept="image/png, image/jpg, image/jpeg"  />
                                @Html.ValidationMessageFor(n => n.Prod_Image, "", new { @class = "text-danger" })

                                <label class="form-control-label px-3">Product Price<span class="text-danger"> *</span></label>
                                @Html.TextBoxFor(n => n.Price, new { @placeholder = "Product Price", @onblur = "validateProd(6)" })
                                @Html.ValidationMessageFor(n => n.Price, "", new { @class = "text-danger" })

                                @Html.HiddenFor(n => n.Status, new { Value = "Available" })

                            </div>
                        </div>
                        <button type="submit" class="btn-block btn-primary">Add Product</button>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


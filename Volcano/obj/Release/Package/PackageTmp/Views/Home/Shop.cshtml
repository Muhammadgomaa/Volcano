@using Volcano.Models;

@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Volcano.Models.Product_Detail> products = ViewBag.Prods;
    List<Volcano.Models.Category_Detail> categories = ViewBag.Catg;
    List<Items> items = ViewBag.List;
}

<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>SHOP</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="">Home</a></li>
                    <li class="breadcrumb-item active">Shop</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<!-- Start Products  -->
<div class="products-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Fruits & Vegetables</h1>
                    <p>Best and Fresh Material Here.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="special-menu text-center">
                    <div class="button-group filter-button-group">
                        <button class="active" data-filter="*">All</button>
                        @for (int i = 0; i < categories.Count(); i++)
                        {
                            //Avoid White Spaces
                            <button data-filter=".@(string.Concat(categories[i].Cat_Name.Where(c=> !Char.IsWhiteSpace(c))))">@categories[i].Cat_Name</button>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row special-list">

            @if (products.Count != 0)
            {
                for (int i = 0; i < products.Count; i++)
                {
                    if (items.Select(n => n.Product.Prod_ID).Contains(products[i].Prod_ID))
                    {
                        <div class="col-lg-3 col-md-6 special-grid @(string.Concat(products[i].Category_Detail.Cat_Name.Where(c=> !Char.IsWhiteSpace(c))))">
                            <div class="products-single fix">
                                <div class="box-img-hover">
                                    <div class="type-lb">
                                        <p class="sale">@products[i].Category_Detail.Cat_Name</p>
                                    </div>
                                    @if (products[i].Prod_Image != null)
                                    {
                                        <img src="~/Attach/@products[i].Prod_Image" class="img-fluid" alt="Image">

                                    }
                                    else
                                    {
                                        <img src="~/Content/images/null.jpg" class="img-fluid" alt="Image">

                                    }
                                </div>
                                <div class="why-text">
                                    <h4>@products[i].Prod_Name</h4>
                                    <h5>@products[i].Price "L.E"</h5>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-lg-3 col-md-6 special-grid @(string.Concat(products[i].Category_Detail.Cat_Name.Where(c=> !Char.IsWhiteSpace(c))))">
                            <div class="products-single fix">
                                <div class="box-img-hover">
                                    <div class="type-lb">
                                        <p class="sale">@products[i].Category_Detail.Cat_Name</p>
                                    </div>
                                    @if (products[i].Prod_Image != null)
                                    {
                                        <img src="~/Attach/@products[i].Prod_Image" class="img-fluid" alt="Image">

                                    }
                                    else
                                    {
                                        <img src="~/Content/images/null.jpg" class="img-fluid" alt="Image">

                                    }
                                    <div class="mask-icon">
                                        <a class="cart" href="">@Html.ActionLink("Add to Cart", "AddCart", new { id = products[i].Prod_ID }, new { @class = "cart" })</a>
                                    </div>
                                </div>
                                <div class="why-text">
                                    <h4>@products[i].Prod_Name</h4>
                                    <h5>@products[i].Price "L.E"</h5>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
            else
            {
                <div>No Products Available Now!</div>
            }
        </div>
    </div>
</div>
<!-- End Products  -->
